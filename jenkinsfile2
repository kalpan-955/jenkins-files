pipeline {
    agent none

    stages {
        stage('clone') {
            agent {
                docker {
                    image 'maven'
                }
            }
            steps {
                sh 'mvn --version'
            }
        }

        stage('build') {
            agent any
            steps {
                echo 'docker build'
            }
        }
    }

    post {
        always {
            cleanWs()
        }
        success {
            sh 'echo done'
        }
    }
}
