pipeline{
    agent none
    stages{
        stage('clone'){
            agent{
                docker{
                    image 'maven'
                }
            }
            steps{
                sh 'mvn --version'
            }
        }
        stage('build'){
            steps{
                echo 'docker bild'
            }
        }
        post{
            always{
                cleanWS()
            }
            success{
                sh "echo done"
            }
        }
    }
}
