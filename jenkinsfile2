pipeline {
    agent any

    stages {
        stage('clone') {
            agent {
                docker {
                    image 'maven:3.8.7-openjdk-17'
                }
            }
            steps {
                echo 'Checking Maven version inside container...'
                sh 'mvn --version'
            }
        }

        stage('build') {
            steps {
                echo 'Starting build...'
                sh 'echo world'
            }
        }
    }

    post {
        failure {
            echo "Pipeline failed. Check the logs of earlier stages."
        }
    }
}
