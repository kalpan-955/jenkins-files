pipeline {
    agent any

    stages {
        stage('clone') {
            agent {
                docker {
                    image 'maven'
                }
            }
            steps {
                sh 'mvn --version'
            }
        }

        stage('check logs') {
            steps {
                sh 'echo "filtering logs for task 3"' 
            }
        }
    }

    post {
        always {
            echo "this"
        }
    }
}
