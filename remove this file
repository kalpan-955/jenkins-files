#!/usr/bin/env groovy

@Library('shared library-vars@main') _ //master or whatever branch


pipeline {
    agent {
          docker {
                	image 'maven'
               		}
          	}
  
    stages {
          stage('Building') {
             steps {
                  sh 'chmod +x gradlew'
                  sh "./gradlew build "
                   }
                }
                stage ('Check logs') {
                    steps {
                        filterLogs ('Task', 3)
                    }
                }
      }
}
