pipeline {
    agent any

    stages {
        stage("Clone") {
            agent {
                docker {
                    image 'maven:3.8.5-openjdk-17'
                }
            }
            steps {
                sh 'mvn --version'
            }
        }

        stage("Build") {
            steps {
                echo "Build steps will go here"
            }
        }
    }
    post{
        always{
            cleanWs()
        }
    }
}


