pipeline {
    agent any
    stages {
        stage('Clone') {
            steps {
                git url: 'https://github.com/your/repo.git'
            }
        }
        stage('Build with Maven') {
            agent {
                docker {
                    image 'maven:3.8.6'
                }
            }
            steps {
                sh 'mvn clean install'
            }
        }
        stage('Docker Build') {
            steps {
                sh 'docker build -t my-image-name .'
            }
        }
    }
}
